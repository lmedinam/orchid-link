@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div style="margin-top: 4em;">
    <h1>
        Hello.<br />
        Welcome Back
    </h1>
    <section>
        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="no-bullet"></div>
            <div>
                <label asp-for="Input.Email" class="form-label"></label>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" required />
            </div>
            <div>
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" autocomplete="current-password" aria-required="true" required />
            </div>
            <div>
                <div class="checkbox">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            </div>
            <div>
                <button id="login-submit" type="submit" class="button">Log in</button>
            </div>
            <div>
                <p>
                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                </p>
            </div>
        </form>
    </section>
</div>

